
/* Linker script to configure memory regions. */
MEMORY
{
  FLASH (rx) : ORIGIN = 0x08000000, LENGTH = 512k
  RAM (rwx)  : ORIGIN = 0x20000000, LENGTH = 128k
}

ENTRY(Reset_Handler)

SECTIONS
{
  .isr_vector :
  {
  	. = ALIGN(4);
    KEEP(*(.isr_vector))
    . = ALIGN(4);
  } > FLASH

	.text :
	{
  	. = ALIGN(4);
		*(.text*)
		*(.rodata*)
		KEEP(*(.init))
		KEEP(*(.fini))
		. = ALIGN(4);
		_etext = .;
	} > FLASH

  /* Exception handling (required by GCC) */
  .ARM.extab :
  {
    *(.ARM.extab* .gnu.linkonce.armextab.*)
  } > FLASH
  .ARM.exidx :
  {
    __exidx_start = .;
    *(.ARM.exidx*)
    __exidx_end = .;
  } > FLASH

	.data : AT (_etext)
	{
		. = ALIGN(4);
		_sdata = .;
    *(.data*)
    . = ALIGN(4);
    _edata = .;
	} > RAM

	.bss :
	{
	  . = ALIGN(4);
		_sbss = .;
    *(.bss*)
    *(COMMON)
    . = ALIGN(4);
    _ebss = .;
	} > RAM

	.heap :
	{
	  . = ALIGN(8);
	  _hend = .;
	} > RAM

	_estack = ORIGIN(RAM) + LENGTH(RAM);
	PROVIDE(__stack = _estack);
}

